@model IEnumerable<here_webapi.Models.DersModels.Ders>

@{
    ViewData["Title"] = "Derslerim";
}

<h1>Derslerim</h1>

<p>
    <a asp-action="Create">Yeni Ders Oluştur</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DersAdi)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DersAdi)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Yönet</a>
            </td>
        </tr>
}
    </tbody>
</table>
